<Window x:Class="Chess_Project.Promotion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess_Project"
        mc:Ignorable="d"
        Title="Promotion" Height="400" Width="400" ResizeMode="NoResize" WindowStyle="None">
    <Grid >
        <Viewbox Name ="PromoBoard" HorizontalAlignment="Center" Margin="80">
            <Border BorderBrush="Black" BorderThickness="2">
                <Grid Name ="Promotion_Board" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="PromotionSpot">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <Button Name="Queen" Grid.Row="0" Grid.Column="0" Background="White" Click="PromotionSelection" Tag="PromotionSpot"/>
                    <Button Name="Knight" Grid.Row="0" Grid.Column="1" Background="White" Click="PromotionSelection" Tag="PromotionSpot"/>
                    <Button Name="Rook" Grid.Row="1" Grid.Column="0" Background="White" Click="PromotionSelection" Tag="PromotionSpot"/>
                    <Button Name="Bishop" Grid.Row="1" Grid.Column="1" Background="White" Click="PromotionSelection" Tag="PromotionSpot"/>

                    <Image Name="WhiteQueen" Loaded="LoadImage" Stretch="Fill" Grid.Row="0" Grid.Column="0" Panel.ZIndex="1" IsEnabled="False" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed" IsHitTestVisible="False"/>
                    <Image Name="WhiteKnight" Loaded="LoadImage" Stretch="Fill" Grid.Row="0" Grid.Column="1" Panel.ZIndex="1" IsEnabled="False" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed" IsHitTestVisible="False"/>
                    <Image Name="WhiteRook" Loaded="LoadImage" Stretch="Fill" Grid.Row="1" Grid.Column="0" Panel.ZIndex="1" IsEnabled="False" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed" IsHitTestVisible="False"/>
                    <Image Name="WhiteBishop" Loaded="LoadImage" Stretch="Fill" Grid.Row="1" Grid.Column="1" Panel.ZIndex="1" IsEnabled="False" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed" IsHitTestVisible="False"/>
                    <Image Name="BlackQueen" Loaded="LoadImage" Stretch="Fill" Grid.Row="0" Grid.Column="0" Panel.ZIndex="1" IsEnabled="False" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed" IsHitTestVisible="False"/>
                    <Image Name="BlackKnight" Loaded="LoadImage" Stretch="Fill" Grid.Row="0" Grid.Column="1" Panel.ZIndex="1" IsEnabled="False" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed" IsHitTestVisible="False"/>
                    <Image Name="BlackRook" Loaded="LoadImage" Stretch="Fill" Grid.Row="1" Grid.Column="0" Panel.ZIndex="1" IsEnabled="False" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed" IsHitTestVisible="False"/>
                    <Image Name="BlackBishop" Loaded="LoadImage" Stretch="Fill" Grid.Row="1" Grid.Column="1" Panel.ZIndex="1" IsEnabled="False" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed" IsHitTestVisible="False"/>
                </Grid>
            </Border>
        </Viewbox>
    </Grid>
</Window>
